<%- include('../../partials/header', { title: 'My Team', user: user }) %>

<div class="page-wrapper">
  <!-- Header -->
  <div class="header-card">
    <h1 class="header-title">
      <i class="bi bi-people-fill"></i>
      My Team
    </h1>
  </div>

  <!-- Employees Table -->
  <div class="table-card">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Employee Name</th>
            <th>Email Address</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (employees.length === 0) { %>
            <tr>
              <td colspan="3" class="text-center">
                <div class="empty-state">
                  <i class="bi bi-emoji-frown"></i>
                  <p>No employees found. Add one below ðŸ‘‡</p>
                </div>
              </td>
            </tr>
          <% } else { %>
            <% employees.forEach(emp => { %>
              <tr>
                <td>
                  <div class="employee-name">
                    <i class="bi bi-person-circle"></i>
                    <%= emp.name %>
                  </div>
                </td>
                <td>
                  <div class="employee-email">
                    <i class="bi bi-envelope"></i>
                    <%= emp.email %>
                  </div>
                </td>
                <td>
                  <div class="action-buttons">
                    <form action="/manager/delete-employee/<%= emp._id %>" method="POST" style="display:inline;">
                      <button
                        class="btn btn-danger btn-sm"
                        onclick="return confirm('Are you sure you want to delete this employee?')">
                        <i class="bi bi-trash"></i> Delete
                      </button>
                    </form>
                    <a
                      href="/manager/assign-task?employeeId=<%= emp._id %>"
                      class="btn btn-success btn-sm">
                      <i class="bi bi-clipboard-plus"></i> Assign Task
                    </a>
                  </div>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Add Employee Form -->
  <div class="add-employee-card">
    <h2 class="section-title">
      <i class="bi bi-person-plus-fill"></i>
      Add New Employee
    </h2>

    <form action="/manager/add-employee" method="POST" id="addEmployeeForm">
      <div class="row">
        <div class="col-md-3 form-group">
          <label class="form-label">
            <i class="bi bi-person"></i>
            Full Name
          </label>
          <input type="text" name="name" placeholder="Enter name" class="form-control" required>
        </div>
        <div class="col-md-3 form-group">
          <label class="form-label">
            <i class="bi bi-envelope"></i>
            Email Address
          </label>
          <input type="email" name="email" placeholder="Enter email" class="form-control" required>
        </div>
        <div class="col-md-3 form-group">
          <label class="form-label">
            <i class="bi bi-lock"></i>
            Password
          </label>
          <input type="password" name="password" placeholder="Enter password" class="form-control" required>
        </div>
        <div class="col-md-3 form-group">
          <label class="form-label" style="opacity: 0;">Action</label>
          <button class="btn btn-primary w-100">
            <i class="bi bi-plus-circle"></i> Add Employee
          </button>
        </div>
      </div>
    </form>
  </div>
</div>

<%- include('../../partials/footer') %>
