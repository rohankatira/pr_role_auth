<%- include('../../partials/header', { user: user }) %>

<div class="page-wrapper ">
<div class="page-container">
  <!-- Header -->
  <div class="header-card">
    <h2>
      <i class="bi bi-clipboard-check-fill"></i>
      My Tasks
    </h2>
    <p class="subtitle">View and manage your assigned tasks</p>
  </div>

  <% if (tasks.length === 0) { %>
    <!-- Empty State -->
    <div class="empty-state">
      <i class="bi bi-inbox"></i>
      <h3>No Tasks Assigned</h3>
      <p>You don't have any tasks assigned yet. Check back later!</p>
    </div>
  <% } else { %>
    <% tasks.forEach(task => { %>
      <div class="task-card 
        <%= task.priority === 'High' ? 'priority-high' 
        : task.priority === 'Medium' ? 'priority-medium' 
        : 'priority-low' %>">
        
        <div class="task-header">
          <h3 class="task-title">
            <i class="bi bi-star-fill"></i>
            <%= task.title %>
          </h3>

          <div class="task-badges">
            <span class="badge badge-priority 
              <%= task.priority === 'Medium' ? 'medium' 
              : task.priority === 'Low' ? 'low' : '' %>">
              <% if (task.priority === 'High') { %>
                <i class="bi bi-exclamation-circle-fill"></i> High Priority
              <% } else if (task.priority === 'Medium') { %>
                <i class="bi bi-dash-circle-fill"></i> Medium Priority
              <% } else { %>
                <i class="bi bi-info-circle-fill"></i> Low Priority
              <% } %>
            </span>

            <span class="badge badge-status 
              <%= task.status === 'Completed' ? 'completed' 
              : task.status === 'In Progress' ? 'in-progress' : '' %>">
              <% if (task.status === 'Completed') { %>
                <i class="bi bi-check-circle-fill"></i> Completed
              <% } else if (task.status === 'In Progress') { %>
                <i class="bi bi-clock-fill"></i> In Progress
              <% } else { %>
                <i class="bi bi-hourglass-split"></i> Pending
              <% } %>
            </span>
          </div>
        </div>

        <p class="task-description"><%= task.description %></p>

        <div class="task-meta">
          <div class="meta-item">
            <i class="bi bi-calendar-event"></i>
            <strong>Deadline:</strong> 
            <%= task.deadline ? task.deadline.toDateString() : 'N/A' %>
          </div>
        </div>

        <!-- Actions -->
        <div class="task-actions">
          <div class="action-row">
            <span class="action-label">
              <i class="bi bi-arrow-repeat"></i> Update Status:
            </span>
            <form action="/employee/update-task/<%= task._id %>" method="POST" 
                  style="display: flex; gap: 0.75rem; flex: 1; flex-wrap: wrap;">
              <select name="status" class="form-select">
                <option value="Pending" <%= task.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                <option value="In Progress" <%= task.status === 'In Progress' ? 'selected' : '' %>>In Progress</option>
                <option value="Completed" <%= task.status === 'Completed' ? 'selected' : '' %>>Completed</option>
              </select>
              <button class="btn-update">
                <i class="bi bi-check-circle"></i> Update
              </button>
            </form>
          </div>

          <div class="action-row">
            <span class="action-label">
              <i class="bi bi-chat-dots"></i> Add Comment:
            </span>
            <form action="/employee/comment/<%= task._id %>" method="POST" 
                  style="display: flex; gap: 0.75rem; flex: 1; flex-wrap: wrap;">
              <input type="text" name="comment" class="form-control" 
                     placeholder="Type your comment here..." required 
                     style="flex: 1; min-width: 200px;">
              <button class="btn-comment">
                <i class="bi bi-send"></i> Add
              </button>
            </form>
          </div>
        </div>

        <!-- Comments -->
        <div class="comments-section">
          <div class="comments-title">
            <i class="bi bi-chat-left-text"></i> Comments
          </div>
          <% if (task.comments.length === 0) { %>
            <p class="text-muted ms-2">No comments yet.</p>
          <% } else { %>
            <ul class="comment-list">
              <% task.comments.forEach(c => { %>
                <li class="comment-item">
                  <span class="comment-author"><%= c.user?.name || 'User' %>:</span>
                  <span class="comment-text"><%= c.text %></span>
                </li>
              <% }) %>
            </ul>
          <% } %>
        </div>
      </div>
    <% }) %>
  <% } %>
</div>
 </div>
<style>
        :root {
            --color-primary: #667eea;
            --color-primary-hover: #5568d3;
            --color-success: #10b981;
            --color-success-hover: #059669;
            --color-warning: #f59e0b;
            --color-danger: #ef4444;
            --color-info: #3b82f6;
            --color-text: #1f2937;
            --color-text-secondary: #6b7280;
            --color-white: #ffffff;
            --color-bg: #f9fafb;
            --color-border: #e5e7eb;
            --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.12);
            --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.1);
            --shadow-lg: 0 10px 25px rgba(0, 0, 0, 0.12);
            --radius-md: 12px;
            --radius-lg: 16px;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .page-wrapper{
           background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);     
        }

        .page-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1.5rem;
        }

        .header-card {
            margin-top: 15px;
            background: var(--color-white);
            border-radius: var(--radius-lg);
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: var(--shadow-lg);
            position: relative;
            overflow: hidden;
        }

        .header-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 6px;
            background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
        }

        .header-card h2 {
            font-size: 2rem;
            font-weight: 700;
            color: var(--color-text);
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .header-card .subtitle {
            color: var(--color-text-secondary);
            font-size: 1rem;
            margin-top: 0.5rem;
        }

        /* Task Card */
        .task-card {
            background: var(--color-white);
            border-radius: var(--radius-lg);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: var(--shadow-md);
            transition: all 0.3s ease;
            border-left: 4px solid var(--color-primary);
        }

        .task-card:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-lg);
        }

        .task-card.priority-high {
            border-left-color: var(--color-danger);
        }

        .task-card.priority-medium {
            border-left-color: var(--color-warning);
        }

        .task-card.priority-low {
            border-left-color: var(--color-success);
        }

        .task-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 1rem;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .task-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--color-text);
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .task-title i {
            color: var(--color-primary);
        }

        .task-badges {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        .badge {
            padding: 0.4rem 0.8rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.35rem;
        }

        .badge-priority {
            background: rgba(239, 68, 68, 0.1);
            color: var(--color-danger);
        }

        .badge-priority.medium {
            background: rgba(245, 158, 11, 0.1);
            color: var(--color-warning);
        }

        .badge-priority.low {
            background: rgba(16, 185, 129, 0.1);
            color: var(--color-success);
        }

        .badge-status {
            background: rgba(102, 126, 234, 0.1);
            color: var(--color-primary);
        }

        .badge-status.completed {
            background: rgba(16, 185, 129, 0.1);
            color: var(--color-success);
        }

        .badge-status.in-progress {
            background: rgba(245, 158, 11, 0.1);
            color: var(--color-warning);
        }

        .task-description {
            color: var(--color-text-secondary);
            margin-bottom: 1rem;
            line-height: 1.6;
        }

        .task-meta {
            display: flex;
            gap: 1.5rem;
            margin-bottom: 1.5rem;
            flex-wrap: wrap;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--color-text-secondary);
            font-size: 0.9rem;
        }

        .meta-item i {
            color: var(--color-primary);
        }

        .task-actions {
            background: rgba(102, 126, 234, 0.05);
            border-radius: var(--radius-md);
            padding: 1rem;
            margin-bottom: 1rem;
        }

        .action-row {
            display: flex;
            gap: 0.75rem;
            margin-bottom: 0.75rem;
            align-items: center;
            flex-wrap: wrap;
        }

        .action-row:last-child {
            margin-bottom: 0;
        }

        .action-label {
            font-weight: 600;
            color: var(--color-text);
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            min-width: 120px;
        }

        .form-select {
            border: 2px solid var(--color-border);
            border-radius: 8px;
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            max-width: 200px;
        }

        .form-select:focus {
            border-color: var(--color-primary);
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            outline: none;
        }

        .form-control {
            border: 2px solid var(--color-border);
            border-radius: 8px;
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: var(--color-primary);
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            outline: none;
        }

        .btn-update {
            background: var(--color-primary);
            color: var(--color-white);
            border: none;
            padding: 0.5rem 1.25rem;
            border-radius: 8px;
            font-weight: 500;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-update:hover {
            background: var(--color-primary-hover);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        }

        .btn-comment {
            background: var(--color-success);
            color: var(--color-white);
            border: none;
            padding: 0.5rem 1.25rem;
            border-radius: 8px;
            font-weight: 500;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-comment:hover {
            background: var(--color-success-hover);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
        }

        .comments-section {
            background: var(--color-bg);
            border-radius: var(--radius-md);
            padding: 1rem;
        }

        .comments-title {
            font-weight: 600;
            color: var(--color-text);
            margin-bottom: 0.75rem;
            font-size: 0.95rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .comments-title i {
            color: var(--color-primary);
        }

        .comment-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .comment-item {
            padding: 0.75rem;
            background: var(--color-white);
            border-radius: 8px;
            margin-bottom: 0.5rem;
            border-left: 3px solid var(--color-primary);
        }

        .comment-item:last-child {
            margin-bottom: 0;
        }

        .comment-author {
            font-weight: 600;
            color: var(--color-primary);
            margin-right: 0.5rem;
        }

        .comment-text {
            color: var(--color-text-secondary);
        }

        .empty-state {
            background: var(--color-white);
            border-radius: var(--radius-lg);
            padding: 4rem 2rem;
            text-align: center;
            box-shadow: var(--shadow-md);
            margin-bottom: 10px;
        }

        .empty-state i {
            font-size: 4rem;
            color: var(--color-border);
            margin-bottom: 1rem;
        }

        .empty-state h3 {
            color: var(--color-text);
            margin-bottom: 0.5rem;
        }

        .empty-state p {
            color: var(--color-text-secondary);
        }

        @media (max-width: 768px) {
            body {
                padding: 1rem 0;
            }

            .header-card {
                padding: 1.5rem;
            }

            .header-card h2 {
                font-size: 1.5rem;
            }

            .task-card {
                padding: 1.25rem;
            }

            .task-header {
                flex-direction: column;
            }

            .action-row {
                flex-direction: column;
                align-items: stretch;
            }

            .action-label {
                min-width: auto;
            }

            .form-select {
                max-width: 100%;
            }
        }
    </style>
<%- include('../../partials/footer') %>
