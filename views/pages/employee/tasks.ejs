<%- include('../../partials/header', { user: user }) %>
  <div class="page-wrapper">
    <!-- Header -->
    <div class="header-card">
      <h2>
        <i class="bi bi-clipboard-check-fill"></i>
        My Tasks
      </h2>
    </div>

    <!-- Task Table -->
    <div class="table-card">
      <div class="table-responsive">
        <table class="table custom-table">
          <thead>
            <tr>
              <th>Task Title</th>
              <th>Description</th>
              <th>Assigned By</th>
              <th>Status</th>
              <th>Update</th>
              <th>Comments</th>
            </tr>
          </thead>
          <tbody>
            <% if (tasks.length === 0) { %>
              <tr>
                <td colspan="6">
                  <div class="empty-state">
                    <i class="bi bi-inbox"></i>
                    <div>No tasks assigned yet.</div>
                  </div>
                </td>
              </tr>
            <% } else { %>
              <% tasks.forEach(task => { %>
                <tr>
                  <td>
                    <div class="task-title">
                      <i class="bi bi-star-fill"></i>
                      <%= task.title %>
                    </div>
                  </td>
                  <td>
                    <div class="task-description"><%= task.description %></div>
                  </td>
                  <td>
                    <div class="assigned-by">
                      <i class="bi bi-person-circle"></i>
                      <%= task.assignedBy ? task.assignedBy.name : 'N/A' %>
                    </div>
                  </td>
                  <td>
                    <% if (task.status === 'Pending') { %>
                      <span class="badge-status pending"><i class="bi bi-hourglass-split"></i> Pending</span>
                    <% } else if (task.status === 'In Progress') { %>
                      <span class="badge-status in-progress"><i class="bi bi-clock-fill"></i> In Progress</span>
                    <% } else { %>
                      <span class="badge-status completed"><i class="bi bi-check-circle-fill"></i> Completed</span>
                    <% } %>
                  </td>
                  <td>
                    <form action="/employee/update-task/<%= task._id %>" method="POST">
                      <select name="status" class="form-select form-select-sm" onchange="this.form.submit()">
                        <option value="Pending" <%= task.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                        <option value="In Progress" <%= task.status === 'In Progress' ? 'selected' : '' %>>In Progress</option>
                        <option value="Completed" <%= task.status === 'Completed' ? 'selected' : '' %>>Completed</option>
                      </select>
                    </form>
                  </td>
                  <td>
                    <div class="comments-container">
                      <% if (task.comments && task.comments.length > 0) { %>
                        <% task.comments.forEach(c => { %>
                          <div class="comment-item">
                            <span class="comment-author"><%= c.user ? c.user.name : 'N/A' %>:</span>
                            <div class="comment-text"><%= c.text %></div>
                          </div>
                        <% }) %>
                      <% } else { %>
                        <div class="no-comments">No comments yet</div>
                      <% } %>
                    </div>
                  </td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<style>
    :root {
      --color-primary: #667eea;
      --color-primary-hover: #5568d3;
      --color-success: #10b981;
      --color-warning: #f59e0b;
      --color-danger: #ef4444;
      --color-text: #1f2937;
      --color-text-secondary: #6b7280;
      --color-white: #ffffff;
      --color-bg: #f9fafb;
      --color-border: #e5e7eb;
      --shadow-lg: 0 10px 25px rgba(0, 0, 0, 0.12);
      --radius-lg: 16px;
    }

    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      
    }

    .page-wrapper {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 1.5rem;
    }

    .header-card {
      margin-top: 15px;
      background: var(--color-white);
      border-radius: var(--radius-lg);
      padding: 2rem;
      margin-bottom: 2rem;
      box-shadow: var(--shadow-lg);
      position: relative;
      overflow: hidden;
    }

    .header-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 6px;
      background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
    }

    .header-card h2 {
      font-size: 2rem;
      font-weight: 700;
      color: var(--color-text);
      margin: 0;
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .table-card {
      margin-bottom: 10px;
      background: var(--color-white);
      border-radius: var(--radius-lg);
      padding: 1.5rem;
      box-shadow: var(--shadow-lg);
      overflow: hidden;
    }

    .custom-table thead {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .custom-table thead th {
      color: var(--color-white);
      font-weight: 600;
      padding: 1rem;
      border: none;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .custom-table tbody tr {
      transition: all 0.3s ease;
      border-bottom: 1px solid var(--color-border);
    }

    .custom-table tbody tr:hover {
      background: rgba(102, 126, 234, 0.05);
      transform: scale(1.01);
    }

    .custom-table tbody td {
      padding: 1rem;
      vertical-align: middle;
      color: var(--color-text);
    }

    .task-title {
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .task-title i {
      color: var(--color-primary);
    }

    .task-description {
      color: var(--color-text-secondary);
      font-size: 0.9rem;
      max-width: 300px;
      line-height: 1.4;
    }

    .assigned-by {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--color-text-secondary);
    }

    .assigned-by i {
      color: var(--color-primary);
    }

    .badge-status {
      padding: 0.5rem 1rem;
      border-radius: 20px;
      font-size: 0.85rem;
      font-weight: 600;
      display: inline-flex;
      align-items: center;
      gap: 0.35rem;
    }

    .badge-status.pending {
      background: rgba(239, 68, 68, 0.1);
      color: var(--color-danger);
    }

    .badge-status.in-progress {
      background: rgba(245, 158, 11, 0.1);
      color: var(--color-warning);
    }

    .badge-status.completed {
      background: rgba(16, 185, 129, 0.1);
      color: var(--color-success);
    }

    .comments-container {
      max-height: 120px;
      overflow-y: auto;
      padding: 0.5rem;
      background: var(--color-bg);
      border-radius: 8px;
    }

    .comment-item {
      margin-bottom: 0.5rem;
      font-size: 0.85rem;
      padding: 0.5rem;
      background: var(--color-white);
      border-radius: 6px;
      border-left: 3px solid var(--color-primary);
    }

    .no-comments {
      color: var(--color-text-secondary);
      font-style: italic;
      font-size: 0.85rem;
      text-align: center;
      padding: 0.5rem;
    }

    .empty-state {
      text-align: center;
      padding: 3rem;
      color: var(--color-text-secondary);
    }

    .empty-state i {
      font-size: 3rem;
      color: var(--color-border);
      margin-bottom: 1rem;
    }

    .comments-container::-webkit-scrollbar {
      width: 6px;
    }

    .comments-container::-webkit-scrollbar-thumb {
      background: var(--color-primary);
      border-radius: 10px;
    }
  </style>
<%- include('../../partials/footer') %>